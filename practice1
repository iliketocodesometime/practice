closest_FA = potential_FAs.loc[potential_FAs['distance'].idxmin()]
closest_city = closest_FA['City']

# Adding boundaries to make sure we match the whole city name, not just a substring
pattern = f"(?:^|;){closest_city}(?:;|$)"

# Use str.contains() to check if the closest city is in the 'Branch City' list of each potential FA
city_FAs = potential_FAs[potential_FAs['Branch City'].str.contains(pattern, na=False)]
